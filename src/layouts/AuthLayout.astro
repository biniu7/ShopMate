---
/**
 * Auth Layout
 *
 * Based on spec 31_1_auth-spec.md section 2.1.2
 *
 * Dedicated layout for authentication pages (login, register, reset-password)
 * Features:
 * - Centered form with logo
 * - Minimalist design (no full navigation)
 * - Responsive (mobile-first)
 * - Toast notifications
 */
import "../styles/global.css";
import { Toaster } from "@/components/ui/toaster";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50 flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      <!-- Logo -->
      <div class="text-center mb-8">
        <a href="/" class="inline-block">
          <h1 class="text-3xl font-bold text-primary hover:opacity-80 transition-opacity">
            ShopMate
          </h1>
        </a>
      </div>

      <!-- Auth form content -->
      <div class="bg-white rounded-lg shadow-lg p-6 sm:p-8">
        <slot />
      </div>

      <!-- Footer link to home -->
      <div class="text-center mt-6">
        <a href="/" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">
          ← Powrót do strony głównej
        </a>
      </div>
    </div>

    <!-- Toast notifications -->
    <Toaster client:load />
  </body>
</html>