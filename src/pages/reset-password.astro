---
import Layout from "@/layouts/Layout.astro";
import ResetPasswordView from "@/components/auth/ResetPasswordView";
import { Toaster } from "@/components/ui/toaster";

// Check if this is a password reset callback (from email link)
const accessToken = Astro.url.searchParams.get("access_token");
const type = Astro.url.searchParams.get("type");
const isResetCallback = type === "recovery" && accessToken;
---

<Layout title="Reset hasła - ShopMate">
  <div class="min-h-screen bg-gray-50 flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      <!-- Logo -->
      <div class="text-center mb-8">
        <a href="/" class="inline-block">
          <h1 class="text-3xl font-bold text-primary">ShopMate</h1>
        </a>
      </div>

      <!-- Auth form content -->
      <div class="bg-white rounded-lg shadow-lg p-6 sm:p-8">
        <ResetPasswordView client:load isResetCallback={isResetCallback} />
      </div>

      <!-- Footer link to home -->
      <div class="text-center mt-6">
        <a href="/" class="text-sm text-gray-600 hover:text-gray-900"> ← Powrót do strony głównej </a>
      </div>
    </div>
  </div>
  <Toaster client:load />
</Layout>
