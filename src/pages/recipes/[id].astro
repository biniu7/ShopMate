---
/**
 * Recipe Details page - szczegóły pojedynczego przepisu
 * Route: /recipes/:id
 */
import Layout from "@/layouts/Layout.astro";
import { RecipeDetailsViewWrapper } from "@/components/recipes/RecipeDetailsViewWrapper";
import { Toaster } from "@/components/ui/toaster";

// Get recipe ID from URL params
const { id } = Astro.params;

// Validate that id exists
if (!id) {
  return Astro.redirect("/recipes");
}

// Middleware sprawdza auth, więc tu mamy pewność że user jest zalogowany
---

<Layout title="Szczegóły przepisu - ShopMate">
  <RecipeDetailsViewWrapper recipeId={id} client:load />
  <Toaster client:only="react" />
</Layout>
